<%- include('layouts/header'); %>
<h2>Edit Data Teacher</h2>

<div class="form">
    <form action="/teachers/edit/<%= teacher.id %> " method="post">
        <label for="first_name">First Name : </label><br>
        <input type="text" name="first_name" id="first_name" value="<%= teacher.first_name %>"><br>
        <label for="last_name">Last Name : </label><br>
        <input type="text" name="last_name" id="last_name" value="<%= teacher.last_name %>"><br>
        <label for="email">Email : </label><br>
        <input type="text" name="email" id="email" value="<%= teacher.email %>"><br>
        <label for="gender">Gender : </label><br>
        <select name="gender" id="gender">
            <option disabled selected>- Select Your Gender -</option>
            <option value="Male" <%= teacher.gender == "Male" ? 'selected' : '' %>>Male</option>
            <option value="Female" <%= teacher.gender == "Female" ? 'selected' : '' %>>Female</option>
        </select><br>
        <label for="birth_date">Birth Date : </label><br>
        <input type="date" name="birth_date" id="birth_date" value="<%= teacher.birth_date %>"><br>
        <label for="subjects">Subjects : </label><br>
        <input type="text" name="subjects" value="<%= teacher.subjects %> "><br>
        <br>
        <button type="submit">Save Data</button> | <a href="/teachers">Show All Data</a>
    </form>
</div>

<%- include('layouts/footer'); %>